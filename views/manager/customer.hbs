<div class="container-fluid px-0">
  <div class="card mb-3 mx-1 text-white" style="background-color: rgb(26, 21, 48);">
    {{#if success_messages}}
    <div class="alert alert-success" role="alert" style="margin: 5px 0 ; text-align: center;">
      {{success_messages}}
    </div>
    {{/if}}
    <div class="row no-gutters my-3">
      <div class="col-md-4" style="text-align: center;">
        {{#if customer.photo}}
        <img style="width: 176px; height: 159px;" src="{{customer.photo}}" alt="...">
        {{else}}
        <img style="width: 176px; height: 159px;" src="data:image/png;base64," alt="...">
        {{/if}}
      </div>
      <div class="col-md-7">
        <div class="card-body">
          <h5 class="card-title">{{customer.name}}</h5>
          <p class="card-text mb-1">地址: {{customer.address}}</p>
          <p class="card-text mb-1">Tel: {{customer.tel}}</p>
          <p class="card-text mb-1">Fax: {{customer.fax}}</p>
        </div>
      </div>
      <div class="col-md-1">
        <a class="btn btn-warning my-3 mr-5" href='/manager/customers/{{customer.id}}/edit'>變更資料</a>
        <form action="/manager/customers/{{customer.id}}/?_method=DELETE" method="post" onSubmit="javascript:return window.confirm('會連同部品一起刪除，確認刪除嗎?')">
          <button type="submit" class="btn btn-outline-danger my-3 mr-5">刪除客戶</button>
        </form>
      </div>
    </div>
  </div>

  <div class="mt-3" style="flex-grow: 1;">
    <div class="m-auto" style="max-width: 90%;">
      <div class="d-flex flex-row justify-content-between mb-2">
        <h3 class="text-warning m-0">各部品</h3>
        <a class="btn btn-success" href="/manager/partnumber/create" role="button">+ 新增部品</a>
      </div>
      <table class="m-auto text-white border border-secondary" style="width: 100%">
        <tr class="border border-secondary" style="background-color: rgb(0, 15, 146);">
          <th>日期</th>
          <th>部品番號</th>
          <th>入庫</th>
          <th>出庫</th>
          <th>備註</th>
          <th>在庫數</th>
        </tr>
        <tr>
          <td>施工中...</td>
        </tr>
