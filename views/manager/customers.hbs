<div class="container">

  <div class="text-center">
    {{#if success_messages}}
    <div class="alert alert-success" role="alert" style="margin: 5px 0 ; text-align: center;">{{success_messages}}</div>
    {{/if}}
  </div>
  <div class="d-flex justify-content-end"><a class="btn btn-success my-3" href="/manager/customers/create">+発注人</a></div>

  <div class="d-flex flex-wrap justify-content-between">

    {{#each customers}}
    <a class="btn text-white" style="text-decoration: none; width: 540px" href="/manager/customers/{{this.id}}">
      <div class="d-flex " style="background-color: rgb(26, 21, 48);">
        <div>
          {{#if this.photo}}
          <img src="{{this.photo}}" alt="..." style="max-width: 240px; max-height: 180px;">
          {{else}}
          <img src="data:image/png;base64," alt="..." style="max-width: 240px;max-height: 180px;">
          {{/if}}
        </div>

        <div class="ml-2" style="text-align: left;">
          <h4>{{this.name}}</h4>
          <p>地址: {{this.address}}</p>
          <p>Tel: {{this.tel}}</p>
          <p>Fax: {{this.fax}}</p>
        </div>
      </div>
    </a>
    {{/each}}

  </div>

</div>