<div class="container mt-5">
  <form class="border border-secondary rounded p-4 m-auto" action="/warehouse/shipping" method="post" style="width: 50%; background-color: rgb(26, 21, 48);">
    <div class="text-center mb-4">
      <h2 class="mb-3 font-weight-normal text-white">部品出貨</h2>
    </div>
    <div class="form-group text-white">
      <label for="name">部品番號</label>
      <input type="text" class="form-control" name="name" id="name" placeholder="Enter name" value="">
    </div>

    <div class="form-group text-white">
      <label for="quantity">出貨數量</label>
      <input type="number" class="form-control" name="quantity" id="quantity" placeholder="Enter quantity" min=0 value=0>
    </div>
    <br />
    <button type="submit" class="btn btn-lg btn-success btn-block">Submit</button>
  </form>

</div>