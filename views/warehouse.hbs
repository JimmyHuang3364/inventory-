<div class="container">

  <div class="mt-3">
    <div class="d-flex flex-row justify-content-between align-items-center">
      <div class="mb-2">
        <a class="btn btn-outline-secondary {{#if customerId}}{{else}}active{{/if}}" href="/warehouse/partnumbers" role="button">全部 {{CustomerId}}</a>
        {{#each customers}}
        <a class="btn btn-outline-secondary {{#ifCond this.id ../customerId}}active{{/ifCond}}" href="?customerId={{this.id}}" role="button">{{this.name}}</a>
        {{/each}}
      </div>

      <div class="mb-2">
        <a class="btn btn-warning mr-2" href="/warehouse/warehousing" role="button">新增入庫</a>
        <a class="btn btn-success" href="/warehouse/shipping" role="button">新增出貨</a>
      </div>
    </div>

    <div>
      {{#if success_messages}}
      <div class="alert alert-success mx-5 mb-3" role="alert" style="margin: 5px 0 ; text-align: center;">{{success_messages}}</div>
      {{/if}}

      <div class="m-auto text-white border border-white bg-primary rounded-top d-flex justify-content-between p-1" style="max-width: 90%;">
        <h4 class="m-0">部品</h4>
      </div>
      {{#each partNumbers}}
      <div class="m-auto text-white border border-white d-flex justify-content-between align-items-center" style="max-width: 90%;">
        <p class="m-0"><span class="text-warning" style="cursor: pointer;">&ensp;-</span> {{this.name}} {{#if this.commonName}} （{{this.commonName}}） {{/if}}</p>
        {{#ifCheckSafety this.quantity this.safetyStockQuantity}} <p class="m-0  text-danger">注意！！低於安全庫存！！</p> {{/ifCheckSafety}}
        <p class="m-0 {{#ifCheckSafety this.quantity this.safetyStockQuantity}} text-danger {{/ifCheckSafety}}">在庫數 : {{this.quantity}}&nbsp</p>
      </div>

      {{#if this.subPartNumbers}}
      <div>
        <div class="m-auto text-white border border-white" style="max-width: 90%;">
          <div class="pl-5 border border-white d-flex justify-content-between bg-info">
            <h6 class="m-0"><span class="text-dark">{{this.name}}-</span>子部品</h6>
          </div>
          {{#each this.subPartNumbers}}
          <div class="pl-5 border border-white d-flex justify-content-between align-items-center bg-dark">
            <p class="m-0 text-info">{{this.name}} {{#if this.commonName}} （{{this.commonName}}） {{/if}}</p>
            {{#ifCheckSafety this.quantity this.safetyStockQuantity}} <p class="m-0  text-danger">注意！！低於安全庫存！！</p> {{/ifCheckSafety}}
            <p class="m-0 {{#ifCheckSafety this.quantity this.safetyStockQuantity}} text-danger {{/ifCheckSafety}}">在庫數 : {{this.quantity}}&nbsp</p>
          </div>
          {{/each}}
        </div>
      </div>
      {{/if}}
      {{/each}}

    </div>

  </div>

</div>